?>

<?php if($freeShippingAmount):?>
    <div class="shipping-box">
        <img src="<?= $this->getViewFileUrl('Codazon_QuickShop::images/ship.png'); ?>">
        <strong><?= $block->escapeHtml(__('Free shipping over NOK ' . $freeShippingAmount)) ?></strong>
    </div>
<?php endif;?>
